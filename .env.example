# Autobulk Environment Configuration
# Copy this file to .env and fill in your actual values

# Application settings
AUTOBULK_APP_NAME=autobulk
AUTOBULK_DEBUG=false

# Google API Configuration (choose one method)
# Method 1: Service account JSON file path
# AUTOBULK_GOOGLE_CREDENTIALS_PATH=/path/to/service-account.json

# Method 2: Google credentials as JSON string (base64 encoded)
# AUTOBULK_GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}

# Method 3: OAuth2 credentials
# AUTOBULK_GOOGLE_CLIENT_ID=your-client-id
# AUTOBULK_GOOGLE_CLIENT_SECRET=your-client-secret
# AUTOBULK_GOOGLE_REFRESH_TOKEN=your-refresh-token

# Gmail API Configuration
# AUTOBULK_GMAIL_API_KEY=your-gmail-api-key
# AUTOBULK_GMAIL_API_SECRET=your-gmail-api-secret
# AUTOBULK_GMAIL_ACCESS_TOKEN=your-access-token
# AUTOBULK_GMAIL_REFRESH_TOKEN=your-refresh-token

# SendGrid Configuration
AUTOBULK_SENDGRID_API_KEY=your-sendgrid-api-key
AUTOBULK_SENDGRID_FROM_EMAIL=your-email@example.com
AUTOBULK_SENDGRID_FROM_NAME=Your Name

# Scheduling Configuration
AUTOBULK_SCHEDULER_TIMEZONE=UTC
AUTOBULK_SCHEDULER_MAX_CONCURRENT=10
AUTOBULK_SCHEDULER_RETRY_ATTEMPTS=3
AUTOBULK_SCHEDULER_RETRY_DELAY=60

# Template Configuration
AUTOBULK_TEMPLATES_DIR=templates
AUTOBULK_TEMPLATES_DEFAULT_TEMPLATE=default
AUTOBULK_TEMPLATES_CACHE_TEMPLATES=true

# Tracking Configuration
AUTOBULK_TRACKING_BASE_URL=https://your-tracking-domain.com
AUTOBULK_TRACKING_ENABLED=true
AUTOBULK_TRACKING_OPEN_TRACKING=true
AUTOBULK_TRACKING_CLICK_TRACKING=true

# Database Configuration
AUTOBULK_DATABASE_URL=sqlite:///autobulk.db
AUTOBULK_DATABASE_ECHO=false

# Logging Configuration
AUTOBULK_LOGGING_LEVEL=INFO
AUTOBULK_LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
AUTOBULK_LOGGING_FILE_PATH=logs/autobulk.log
AUTOBULK_LOGGING_MAX_FILE_SIZE=10485760
AUTOBULK_LOGGING_BACKUP_COUNT=5
AUTOBULK_LOGGING_CONSOLE_OUTPUT=true