# Email Tracking Service Configuration

# Database
TRACKING_DB_PATH=tracking.db

# Server Configuration
TRACKING_HOST=0.0.0.0
TRACKING_PORT=5000
TRACKING_DEBUG=False

# Optional: Public tracking server URL for embeds in emails
PUBLIC_TRACKING_URL=http://localhost:5000

# Optional: SendGrid configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_WEBHOOK_SECRET=your_webhook_secret

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=tracking.log
